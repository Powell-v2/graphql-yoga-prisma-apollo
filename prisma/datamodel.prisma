type User {
  id: ID! @id
  name: String!
  email: String! @unique
  posts: [Post!]! @relation(name: "PostsByUser", onDelete: CASCADE)
}

type Post {
  id: ID! @id
  title: String!
  body: String!
  published: Boolean!
  author: User! @relation(link: TABLE, name: "PostsByUser")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Comment {
  id: ID! @id
  text: String!
  author: User! @relation(link: TABLE, name: "CommentsByUser")
  post: Post! @relation(link: TABLE, name: "CommentsByPost")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
